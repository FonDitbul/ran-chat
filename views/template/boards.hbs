<html lang='en'>
<head>
  <title>Random-Chatting</title>
  <link href='https://unpkg.com/tailwindcss@^2/dist/tailwind.min.css' rel='stylesheet'/>
  <link href='css/styles.css' rel='stylesheet' />
</head>
{{> header }}
<body>
<div>
  <nav class="flex bg-gray-50 text-gray-700 border border-gray-200 py-3 px-5 rounded-lg dark:bg-gray-800 dark:border-gray-700" aria-label="Breadcrumb">
    <ol class="inline-flex items-center space-x-1 md:space-x-3">
      <li class="inline-flex items-center">
        <a href="/" class="text-sm text-gray-700 hover:text-gray-900 inline-flex items-center dark:text-gray-400 dark:hover:text-white">
          <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"></path></svg>
          홈
        </a>
      </li>
      {{#each breads}}
        {{> breadcrumbList bread=name}}
      {{/each}}
    </ol>
  </nav>
  <div class="mx-auto">
    <div class="p-4 bg-white border border-primary rounded-md">
      <!-- 게시판 상세 내용 -->
      <div class="flex">
        <div class="space-y-1 flex flex-col w-full">
          <div class="flex w-full flex items-center">
            <div class="bg-gray-200 border border-gray-200 w-60 h-5 animate-pulse">(글제목){{data.title}}</div>
            <div class="ml-4 bg-ternary w-12 h-5 animate-pulse"></div>
          </div>
          <div class="bg-gray-200 border border-gray-200 w-36 h-5 animate-pulse">(작성날짜){{data.createdAt}}</div>
          <div class="bg-gray-200 border border-gray-200 w-36 h-5 animate-pulse">(작성자 정보){{data.createdAt}}</div>
          <div class="bg-gray-200 border border-gray-200 w-full h-44 animate-pulse">
            (본문내용) {{data.content}}
          </div>
        </div>
      </div>
      <!-- 좋아요 싫어요 -->
      <div class="mt-4 flex items-center justify-between">
        <div class="flex items-center gap-2 mx-auto" >
          <div class="bg-gray-200 border border-gray-200 w-16 h-5 animate-pulse">(좋아요) {{data.like}}</div>
          <span class="bg-tertiary h-1 w-20 rounded animate-pulse"></span>
          <div class="bg-gray-200 border border-gray-200 w-16 h-5 animate-pulse">(싫어요){{data.dislike}}</div>
        </div>
        <!-- 개시판 수정하기 -->
        <div class="bg-gray-200 border border-gray-200 w-16 h-5 animate-pulse">수정하기</div>
      </div>
    </div>
    <!--댓글 불러오기-->
    <div class="p-4 bg-white border border-primary rounded-md">
      댓글창
      {{#each comment}}
        <div class="bg-gray-200 border border-gray-200 w-36 h-5 animate-pulse">{{user_userName}} {{comment_createdAt}}</div>
        <div class="bg-gray-200 border border-gray-200 w-full h-44 animate-pulse">
          {{comment_content}}
        </div>
      {{/each}}
    </div>
    <!-- 댓글 작성하기 -->
    <div>
      <input placeholder='대충 댓글 작성하라는 얘기'>
    </div>
  </div>
</div>
</body>
<script src="https://unpkg.com/axios/dist/axios.min.js"></script>
<script src='js/template/boards.js'></script>
</html>
